<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context="com.nikmalov.portfolioproject.PopularVideoApp.MovieDetailActivityFragment">

    <TextView
        android:id="@+id/detailed_movie_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:textSize="36sp"
        android:background="@color/detailed_view_primary"
        android:textColor="@color/white"
        android:padding="16dp" />
    <ListView
        android:id="@+id/detailed_movie_list_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    </ListView>
</LinearLayout>
